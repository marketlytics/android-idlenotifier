<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin"
	    tools:context=".MainActivity" >
	    
	   	<Button
	        android:id="@+id/helpButton"
	        style="?android:attr/buttonStyleSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:text="FAQ"
	        android:onClick="showHelp" />
	
	    <TextView
	        android:id="@+id/textViewSelectAccount"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="10dp"
	        android:text="Select linked account:"
	        android:textAppearance="?android:attr/textAppearanceSmall" />
	
	    <Spinner
	        android:id="@+id/spinnerAccountList"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/textViewSelectAccount" />
	
	    <ToggleButton
	        android:id="@+id/toggleButtonService"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:width="140dp"
	        android:height="60dp"
	        android:layout_below="@+id/spinnerAccountList"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="40dp"
	        android:text="ToggleButton" />
	
	    <TextView
	        android:id="@+id/settingsTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/toggleButtonService"
	        android:text="Settings"
	        android:layout_marginTop="40dp"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TextView
	        android:id="@+id/textViewLinkedToChrome"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/settingsTextView"
	        android:layout_marginTop="10dp"
	        android:text="Your account is not yet linked with Chrome." />
	    
	    
	    <TextView
	        android:id="@+id/defaultModeTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dp"
	        android:layout_below="@+id/textViewLinkedToChrome"      
	        android:text="Default mode:" />
	
	    <Spinner
	        android:id="@+id/defaultModeSpinner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/defaultModeTextView" />
	    
	    <TextView
	        android:id="@+id/activeModeTextView"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/defaultModeSpinner"
	        android:layout_marginTop="10dp"
	        android:text="Active (on computer) mode:" />
	
	    <Spinner
	        android:id="@+id/activeModeSpinner"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/activeModeTextView" />
	
	</RelativeLayout>
</ScrollView>